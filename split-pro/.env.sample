# Split-Pro Domain
SPLITPRO_DOMAIN=splitpro.yourdomain.com

# Split-Pro Port
SPLITPRO_PORT=3000

# Timezone
TIMEZONE=America/Vancouver

# PostgreSQL Configuration
POSTGRES_USER=splitpro
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=splitpro
POSTGRES_PORT=5432

# NextAuth Configuration (Required for authentication)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth (Optional - only if using Google sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: Custom data directory
SPLITPRO_DATA_DIR=${DATA_DIRECTORY}/splitpro
