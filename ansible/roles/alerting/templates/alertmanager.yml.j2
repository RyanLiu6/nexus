# Alertmanager configuration
global:
  resolve_timeout: 5m

# Route alerts to Discord webhook
route:
  receiver: 'discord-notifications'
  group_by: ['alertname', 'severity']
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 12h

receivers:
  - name: 'discord-notifications'
    webhook_configs:
      - url: 'http://localhost:8080/webhook'  # Discord bot webhook endpoint
        send_resolved: true
